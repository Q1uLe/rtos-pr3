# НАЗНАЧЕНИЕ ПРОГРАММЫ                                   #
# Автоматизация сборки программ prog1 и process.         #
# Упрощение компиляции и очистки проекта.                #
# ------------------------------------------------------ #

# Компилятор и флаги
CC = gcc
CFLAGS = -Wall -Wextra -std=c99 -g
TARGET1 = prog1
TARGET2 = process
SOURCES1 = prog1.c
SOURCES2 = process.c

# Основная цель - собирает все программы
all: $(TARGET1) $(TARGET2)

# Сборка основной программы
$(TARGET1): $(SOURCES1)
	@echo "Компиляция основной программы..."
	$(CC) $(CFLAGS) -o $(TARGET1) $(SOURCES1)
	@echo "Программа $(TARGET1) успешно собрана!"

# Сборка дочерней программы
$(TARGET2): $(SOURCES2)
	@echo "Компиляция дочерней программы..."
	$(CC) $(CFLAGS) -o $(TARGET2) $(SOURCES2)
	@echo "Программа $(TARGET2) успешно собрана!"

# Очистка проекта
clean:
	@echo "Очистка скомпилированных файлов"
	rm -f $(TARGET1) $(TARGET2)
	@echo "Очистка завершена!"

# Информация о проекте
info:
	@echo "ИНФОРМАЦИЯ О ПРОЕКТЕ"
	@echo "Основная программа: $(TARGET1)"
	@echo "Дочерняя программа: $(TARGET2)"
	@echo "Исходные файлы: $(SOURCES1) $(SOURCES2)"
	@echo "Компилятор: $(CC)"
	@echo "Флаги компиляции: $(CFLAGS)"

.PHONY: all clean info
